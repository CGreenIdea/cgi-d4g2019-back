  "description": "Une proposition de r√©ponse au challenge Design4green 2019",
  "scripts": {
    "start": "run-p start:**",
    "start:assets": "nodemon -w assets -x \"npm run build:assets\"",
    "start:html": "nodemon -w src -e html -x \"npm run build:html\"",
    "start:webpack": "webpack-dev-server --config webpack.dev.js --hot",
    "prebuild": "rimraf dist",
    "build": "run-p build:**",
    "build:assets": "ncp assets dist",
    "build:html": "html-minifier --collapse-whitespace --remove-comments --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --input-dir src --output-dir dist --file-ext html",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js"
  },
